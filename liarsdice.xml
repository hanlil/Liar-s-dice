<?xml version="1.0"?>
<!DOCTYPE vxml 
  PUBLIC "-//W3C//DTD VOICEXML 2.1//EN" "http://www.speech.kth.se/~gabriel/voicexml/vxml.dtd">
<vxml xmlns="http://www.w3.org/2001/vxml" version="2.1" xml:lang="en-US">
	<form id="game">
		<grammar src="grammar.xml#START" type="application/grammar-xml" maxage="0"/>
		<field name="welcome">
			<prompt>Hello, you are going to play a liar's dice game. Please roll the dice</prompt>
		</field>
		<field name="bid">
			<grammar src="grammar.xml#BID"/>
			<prompt>Make your bid</prompt>
			<nomatch>
				This is not a bid<break/><reprompt/>
			</nomatch>
		</field>
		<filled mode="all" namelist="count">
			<prompt>
				Your bid is <value expr="count"/>
			</prompt>
		</filled>
		<field name="count">
			<grammar src="grammar.xml#COUNT"/>
			<prompt>Say your count</prompt>
		</field>
	</form>
</vxml>
